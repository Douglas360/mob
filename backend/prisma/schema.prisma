generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Liga{
  id_liga Int @id
  nm_liga String

  @@map("t_liga")
  jogos Jogo[]
}

model Jogo{
  id_jogo Int @id
  id_liga Int
  minuto_jogo String
  time_casa String
  time_visitante String
  result_ft_casa String
	result_ft_visitante String
	result_ht_correct_score_casa String
	result_ht_correct_score_visitante String
  dt_atualizacao DateTime

  ligas Liga @relation(fields: [id_liga], references: [id_liga])
  @@map("t_jogo")

}

model User{
  id_usuario Int @id @default(autoincrement())
  nm_usuario String
  email_usuario String @unique
  status_usuario Int @default(1)
  password String
  dt_ultimo_login DateTime?
  dt_criacao DateTime @default(now())
  dt_atualizacao DateTime?
  verificado Int @default(0)
  validate DateTime
  
 
  

  @@map("t_usuario")

}






